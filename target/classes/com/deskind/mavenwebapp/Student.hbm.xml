<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
   <class name="com.deskind.mavenwebapp.Student" table="STUDENT">
      <meta attribute="class-description">
         This class contains the student detail. 
      </meta>
      <id name="studentId" type="int" column="ID">
         <generator class="native"/>
      </id>
      <property name="studentFirstName" column="FIRST_NAME" type="string"/>
      <property name="studentLastName" column="LAST_NAME" type="string"/>
   </class>
</hibernate-mapping>
